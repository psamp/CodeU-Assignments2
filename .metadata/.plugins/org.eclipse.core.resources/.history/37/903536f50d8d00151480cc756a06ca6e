package com.psamp.fileencryptor;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.Reader;
import java.io.Writer;

import com.psamp.fileencryptor.encryption.CaesarEncryptor;
import com.psamp.fileencryptor.encryption.Encryptor;

class FileEncryptor {
	Encryptor encryptor;

	public FileEncryptor() {
		encryptor = new CaesarEncryptor();
	}

	File encryptFile(File file) {
		Reader reader = null;
		Writer writer = null;
		int current = 0;

		try {
			reader = new BufferedReader(new FileReader(file));
			while ((current = reader.read()) != -1) {
				String character = encryptor.encrypt(String.valueOf((char) current));
				writer = new BufferedWriter(FileWriter());
			}
		} catch (IOException e) {
			e.printStackTrace();

		} finally {
			try {
				reader.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}

		return null;

	}

}
