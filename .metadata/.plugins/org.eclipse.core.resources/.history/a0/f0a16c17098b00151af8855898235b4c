package com.psamp.encrypt;

import java.util.HashMap;
import java.util.Map;

class Chalkboard {
	
	private char[] alphabet = { 'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'o', 'p', 'q', 'r', 's',
			't', 'u', 'v', 'w', 'x', 'y', 'z' };
	private char[] cryptabet = { 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'o', 'p', 'q', 'r', 's',
			't', 'u', 'v', 'w', 'x', 'y', 'z', 'a', 'b', 'c' };
	Map<Character, Character> alphaToCrypta;
	
	private void map() {
		alphaToCrypta = new HashMap<Character, Character>();
		
		for (int i = 0; i < Math.min(alphabet.length, cryptabet.length); i++) {
			alphaToCrypta.put(alphabet[i], cryptabet[i]);
		}
	}
	
	String shift(String str) {
		char[] word = str.toLowerCase().trim().toCharArray();
		this.map();
		for (int i = 0; i < word.length; i++) {
			
			if((word[i] >= 97 && word[i] <= 122)) {
				word[i] = alphaToCrypta.get(word[i]);
			
		}
		
		return String.valueOf(word);
	}

}
